config SIMPLE_HTTP_OTA_FILE_URL
	string "Download URL"
	default "http://192.168.15.11/hello.bin"
	help
	  URL to download.

config SIMPLE_HTTP_OTA_DOWNLOAD_TIMEOUT
	int "File download timeout"
	default 30
	help
	  Defines the max download time in seconds of the update file before returning error.

source "Kconfig.zephyr"
